{
    "name": "grobax-json-handler",
    "version": "0.0.1",
    "description": "a json plugin for managing in and out json structures on classes them selves. ",
	"main": "dist/index.js",             
	"types": "dist/index.d.ts",          
    "files": [
		"dist/**/*"
	],
	"type": "module",
    "jest": {
        "preset": "ts-jest",
        "collectCoverage": true,
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "html"
        ],
        "testEnvironment": "node",
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "transform": {
            "^.+\\.(ts)$": "ts-jest"
        },
        "testMatch": [
            "**/*.test.ts",
            "**/*.test.js"
        ]
    },
    "scripts": {  
        "build": "npx tsc", 
        "test": "jest --coverage"
    },
    "keywords": [],
    "author": "GrobaxGrappleblast",
    "devDependencies": {
        "@types/jest": "^29.5.12",
        "@types/node": "^22.4.1", 
        "builtin-modules": "4.0.0", 
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "tslib": "^2.6.3",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "async-mutex": "^0.5.0",
        "reflect-metadata": "^0.1.13"
    }
}
