{
    "compilerOptions": {
		"outDir": "./dist",  
		"rootDir": "./src",
		"declaration":true,
		 

        "esModuleInterop":true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",   
        "sourceMap":true,
        "inlineSources": true,
        "module": "commonjs",
        "target": "ES6",
        "verbatimModuleSyntax":false,
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "importsNotUsedAsValues":"remove", 
        "types": ["jest","node"],
        "lib": [
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "include": [
        "**/globals.d.ts"   ,
        "**/*.js"           ,
        "**/*.ts"],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/dist/*"
    ]
}   
