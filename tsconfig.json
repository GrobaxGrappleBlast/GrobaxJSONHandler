{
    "compilerOptions": {
		"outDir": "./dist",  
		"rootDir": "./src",
		"declaration":true, 
        "esModuleInterop":true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./",    
        "module": "commonjs",
        "target": "ES5",
        "verbatimModuleSyntax":false,
        "allowJs": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "importsNotUsedAsValues":"remove", 
		"skipLibCheck":true,
        "types": ["jest","node"], 
		"emitDeclarationOnly":true,
		"allowImportingTsExtensions":true,
        "lib": [
            "ES5",
            "ES6",
            "ES7"
        ],
		"paths": {
			"ttrpg-system-graph": ["node_modules/ttrpg-system-graph"]
		},
    },
    "include": [
        "**/globals.d.ts"   ,
        "**/*.js"           ,
        "**/*.ts"],
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/dist/*",
		"**/test/**"
    ]
}   
